{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "fetch-proto": {
      "inputs": ["package.json"],
      "outputs": ["proto/**"],
      "dependsOn": ["^build"],
      "outputLogs": "new-only"
    },
    "generate": {
      "dependsOn": ["fetch-proto"],
      "inputs": ["proto/**", "buf.gen.yaml"],
      "outputs": ["src/gen/**"],
      "outputLogs": "new-only"
    },
    "update-readme": {
      "dependsOn": ["^build"],
      "inputs": ["README.md"],
      "outputs": ["README.md"],
      "outputLogs": "new-only"
    }
  }
}
